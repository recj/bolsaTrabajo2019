<div class="row p-5">
    <div class="col-md-6 mx-auto">
        <div class="card ">

            <div class="card-body">
                <form action="/links/search2" method="POST">

                    <h3>Busqueda de empleado: </h3>
                    <div class="form-row">

                        <div class="form-group col-md-3">
                            <label for="exampleFormControlSelect1">Categoria</label>
                            <select class="form-control" name="categoria">
                                <option>Cualquier categoria</option>

                                {{#each categoria }}

                                <option>{{nombre}}</option>


                                {{/each}}


                            </select>
                        </div>
                        <div class="form-group col-md-3">
                            <label for="exampleFormControlSelect1">Nivel de estudios</label>
                            <select class="form-control" name="contrato">
                                <option>Cualquier nivel</option>

                                <option>Educacion primaria</option>
                                <option>Educacion secundaria</option>
                                <option>Tecnico medio</option>
                                <option>Tecnico superior</option>
                                <option>Licenciatura</option>
                                <option>Master</option>
                                <option>Doctorado</option>


                            </select>
                        </div>

                        <div class="form-group col-md-3">
                            <label for="exampleFormControlSelect1">Ciudad de residencia</label>
                            <select class="form-control" name="ciudad">
                                <option>Cualquier ciudad</option>

                                {{#each ciudad }}
                                <option>{{nombreciudad}}</option>


                                {{/each}}



                            </select>


                        </div>

                        <button class="btn btn-primary col-md-2 my-sm-4" type="submit">Buscar</button>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>






